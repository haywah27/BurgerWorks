{{!-- setup to have the template that Handlebars can render onto --}}
{{!-- create button to submit user input to database --}}
<h1>Burgers</h1>

<h3>List</h3>

<div>
    <h4>Haven't Eaten!</h4>
    <div id="not_eaten">

        {{!-- keep undevoured items on list ONLY --}}
        {{#each burgers}} 
        {{#unless devoured}}
            <form action="/{{id}}" method="POST">
                <ul>
                    <li>{{id}}. {{burger_name}}</li><button id="devour-button" type="submit">Eat This Burger!</button>
                </ul>
            </form>
        {{/unless}} 
        {{/each}}

    </div>
</div>

