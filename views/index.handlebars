<h3 class= "title is-2">Have Eaten!</h3>
<div id="eaten">

    {{!-- keep devoured items on list ONLY --}}
    {{#each burgers}} 
    {{#if devoured}}
        <form action="/{{id}}" method="POST">
            <ul>
                <li>{{id}}. {{burger_name}}</li>
            </ul>
        </form>
    {{/if}} 
    {{/each}}

</div>